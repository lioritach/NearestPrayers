<?xml version="1.0" encoding="utf-8"?>
<!--Buttom sheet layout to display synagogues details and edit/delete option -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!---->
    <RelativeLayout
        android:id="@+id/toolbarRl_ID"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/backBtn_editSynID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back_white"/>

        <ImageButton
            android:id="@+id/deleteBtn_editSynID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_delete_gray"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/editBtn_editSynID"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_edit_white"
            android:layout_toStartOf="@id/deleteBtn_editSynID"
            android:layout_toLeftOf="@id/deleteBtn_editSynID" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="פרטי בית הכנסת"
            android:textColor="@color/whiteColor"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/synImageEdit_ID_editSyn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/bg"
        android:padding="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icons8_synagogue_40"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/synImageEdit_ID_editSyn"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/negishutEditSynId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect05"
            android:padding="5dp"
            android:textSize="10sp"
            android:text="קיים נגישות"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorGreen"/>
        
        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="שם בית הכנסת"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
        android:id="@+id/addressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="כתובת בית הכנסת"
        android:textColor="@color/black"
        android:textStyle="bold"/>

        <TextView
        android:id="@+id/categoryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="נוסח תפילה"
        android:textColor="@color/black"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/shacharitTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="תפילת שחרית"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
        android:id="@+id/minhaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="תפילת מנחה"
        android:textColor="@color/black"
        android:textStyle="bold"/>

        <TextView
            android:id="@+id/arvitTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="תפילת ערבית"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/eventsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="אירוע מיוחד"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nehimTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="נגישות נכים"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/womenTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="נגישות נשים"
            android:textColor="@color/black"
            android:textStyle="bold"/>


    </LinearLayout>


</RelativeLayout>